<div class='container'>
<table border='0' cellpadding='0' cellspacing='0' width='100%' stype='padding:2px' bgcolor='#ff6600'>
  <tbody>
    <tr>
      <td style="line-height:15pt; height:10px;">
        <span class='pagetop'>
          <a href='/'><b>Hacker News</b></a>
          <a href='/post'>submit</a>  |
          <a href='/comment'>comment</a> |
        </span>
      </td>
      <td stype='text-align:right;padding-right:4px;'>
        <% if session[:username] %>
          <%= session[:username] %>:
          <a href='/logout'>logout</a>
        <% else %>
          <a href='/login'>login</a>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

  <h3><%=@post.title%></h3>
  <form name='commentpost' action='/post/<%=@post.id%>/comment' method='post'>
    <textarea rows='5' cols='50' name='comment'></textarea><br><br>
    <input type='submit' value='add comment'>
  </form><br><br><br><br>

  <div id='title_comment'>
    <%@comment.each do |c|%>
      <a href='/user/<%=c.user.id%>'><%=c.user.username%></a><br>
      <p id='comment_body'><%=c.body%></p>
    <%end%>
  </div>
</div>