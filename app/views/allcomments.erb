<div class='container'>
<table border='0' cellpadding='0' cellspacing='0' width='100%' stype='padding:2px' bgcolor='#ff6600'>
  <tbody>
    <tr>
      <td style="line-height:15pt; height:10px;">
        <span class='pagetop'>
          <a href='/'><b>Hacker News</b></a>
          <a href='/post'>submit</a>  |
          <a href='/comment'>comment</a> |
        </span>
      </td>
      <td stype='text-align:right;padding-right:4px;'>
        <% if session[:username] %>
          <%= session[:username] %>:
          <a href='/logout'>logout</a>
        <% else %>
          <a href='/login'>login</a>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

<div>
    <%@comments.each do |c|%>
      <div id ='title_comment'>
      <a href='/user/<%= c.user.id %>'>
        <%= c.user.username%>
      </a>
        <%=c.created_at.strftime("%d %b. %Y") %>
    </div>
      <p id="comment_body"><%= c.body %><br></p>
    <%end%>
</div>
</div>
